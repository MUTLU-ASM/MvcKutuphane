@using MvcKutuphane.Models.Entitiy
@model List<personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personeller</h2>

<table class="table table-hover table-bordered">
    <tr>
        <th>Id</th>
        <th>Personel</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.personel1</td>
            <td><a href="/Personel/PersonelSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@x.id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>