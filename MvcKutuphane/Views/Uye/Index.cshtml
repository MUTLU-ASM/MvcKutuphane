@using MvcKutuphane.Models.Entitiy
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<uye>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üyeler</h2>

<table class="table table-hover table-bordered">
    <tr>
        <th>ID</th>
        <th>Üye Adı</th>
        <th>Soyadı</th>
        <th>Mail</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Telefon</th>
        <th>Okul</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.soyad</td>
            <td>@x.mail</td>
            <td>@x.kullaniciad</td>
            <td>@x.sifre</td>
            <td>@x.telefon</td>
            <td>@x.okul</td>
            <td><a href="/Uye/UyeSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Uye/UyeGetir/@x.id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/Uye/UyeEkle" class="btn btn-primary">Yeni Üye Ekle</a>