@model MvcKutuphane.Models.Entitiy.kitap
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Güncelle</h2>

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
<div class="form-group" style="margin-top:15px">
    <div style="margin-top:15px">
        <label>Id</label>
        @Html.TextBoxFor(k => k.id, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Ad</label>
        @Html.TextBoxFor(k => k.ad, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kategori</label>
        @Html.DropDownListFor(k => k.kategori1.id, (List<SelectListItem>)ViewBag.ktgdgr, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Yazar</label>
        @Html.DropDownListFor(k => k.yazar1.id, (List<SelectListItem>)ViewBag.yzrdgr, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(k => k.basımyil, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Yayın Evi</label>
        @Html.TextBoxFor(k => k.yayinevi, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Sayfa</label>
        @Html.TextBoxFor(k => k.sayfa, new { @class = "form-control" })
    </div>
    <button style="margin-top:15px" class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
</div>
}